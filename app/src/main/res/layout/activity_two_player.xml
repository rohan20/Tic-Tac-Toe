<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.rohantaneja.tictactoe.TwoPlayerActivity">

    <Button
        android:id="@+id/reset_game_button"
        android:onClick="resetGame"
        style="@style/ResetButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="18dp"
        android:fontFamily="casual"
        android:textAllCaps="false"
        android:text="Reset Game" />

    <TextView
        android:id="@+id/game_result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="48sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:fontFamily="casual"
            android:id="@+id/button_4"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:onClick="buttonClicked" />

        <Button
            android:fontFamily="casual"
            android:id="@+id/button_5"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:onClick="buttonClicked" />

        <Button
            android:fontFamily="casual"
            android:id="@+id/button_6"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:onClick="buttonClicked" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linear_layout2"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:fontFamily="casual"
            android:id="@+id/button_1"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:onClick="buttonClicked" />

        <Button
            android:fontFamily="casual"
            android:id="@+id/button_2"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:onClick="buttonClicked" />

        <Button
            android:fontFamily="casual"
            android:id="@+id/button_3"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:onClick="buttonClicked" />

    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/reset_game_button"
        android:id="@+id/linear_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout2"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:fontFamily="casual"
            android:id="@+id/button_7"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:onClick="buttonClicked" />

        <Button
            android:fontFamily="casual"
            android:id="@+id/button_8"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:onClick="buttonClicked" />

        <Button
            android:fontFamily="casual"
            android:id="@+id/button_9"
            style="@style/MyButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="buttonClicked" />

    </LinearLayout>

</RelativeLayout>
